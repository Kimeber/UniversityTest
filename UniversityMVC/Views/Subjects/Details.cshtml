        </dd>


    <dt>
        @Html.DisplayNameFor(model => model.ClassStudents)
    </dt>
    </dl>
    <table class="table table-secondary table-striped table-hover" id="tableClassStudents">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassStudents.FirstOrDefault().Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassStudents.FirstOrDefault().Grade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ClassStudents)
        {
            <tr class="tr-searchable">
                <td>
                    @Html.DisplayFor(modelItem => item.Student)
                </td>
                <td class="td-searchable">
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "ClassStudents", new { id = item.ClassStudentID })" class="btn btn-warning disabled" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"><i class="fa fa-fw fa-edit"></i></a> |
                    <a href="@Url.Action("Delete", "ClassStudents", new { id = item.ClassStudentID })" class="btn btn-danger disabled" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete"><i class="fa fa-fw fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>
</div>
<p>
